{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-here-make-it-long-and-random-in-production"
  },
  "AllowedOrigins": [
    "https://your-frontend-domain.vercel.app",
    "http://localhost:3000"
